#!/bin/bash

##### mcstatus shim for mc-monitor

addr="$1"
cmd="$2"

if [[ ${cmd} == "ping" ]]; then
  IFS=':'
  read -a parts <<< "${addr}"
  if [[ ${#parts[*]} -gt 1 ]]; then
    echo mc-monitor status --host ${parts[0]} --port ${parts[1]}
  else
    echo mc-monitor status --host ${parts[0]}
  fi
else
  echo "ERROR can only shim the 'ping' command"
  exit 1
fi